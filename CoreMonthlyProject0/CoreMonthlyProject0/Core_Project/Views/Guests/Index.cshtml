@model IEnumerable<Core_Project.Models.Guest>

@{
    ViewData["Title"] = "Index";
}

<h1>Guest Information</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model)
{
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div>
                    <img src="@item.Picture" width="32" class="mr-2" />
                    Name: @item.GuestName
                    Date: @item.CheckIn.ToString("yyyy-MM-dd")
                    Phone: @item.Phone
                </div>
                <div>

                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Guests" asp-route-id="@item.GuestId">Edit</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Guests" asp-route-id="@item.GuestId">Delete</a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped table-sm">
                    <thead>
                        <tr>
                        <th>GuestID</th>
                            <th>GuestName</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var singleEntry in item.BookingEntries)
                    {
                                <tr>
                                    <td>@singleEntry.GuestId</td>
                                    <td>@singleEntry.Room.RoomType</td>
                                </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
}
